<nav class="navbar navbar-expand-lg navbar-light bg-light d-flex justify-content-between">
  <a class="navbar-brand" href="">Simple Airbnb</a>
  <div class="collapse navbar-collapse flex-grow-0" id="navbarSupportedContent">
    <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0 mr-2" type="submit">Search</button>
      <%= link_to 'Add flat', new_flat_path, :class => "btn btn-outline-primary" %>
    </form>
  </div>
</nav>

<div class="container p-3">
  <h1>All our Flats</h1>
  <div class="d-flex cards">
    <% @flats.each do |flat| %>
      <div class="card mr-4 main_card" >
        <img src="<%= flat.image_url %>" class="image_index">
        <div class="container bg-light pt-3 h-75">
          <h5 class=""><%= flat.name %></h5>
          <p><%= flat.address %></p>
          <div class="d-flex">
            <p><i class="fas fa-user-friends mr-1"></i><%=  flat.number_of_guests %></p>
            <p><i class="fas fa-euro-sign ml-3 mr-1"></i><%= flat.price_per_night %></p>
          </div>
        </div>
        <div class="d-flex p-3 links">
          <%= link_to 'More info', flat_path(flat) %>
          <%= link_to 'Edit', edit_flat_path(flat) %>
          <%= link_to 'Remove', flat_path(flat), :method => :delete %>
        </div>
      </div>
    <% end %>
  </div>
</div>
